<h1>Listing shortened_urls</h1>

<table>
  <tr>
    <th>Shortcode</th>
    <th>Url</th>
    <th>Clicks</th>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @urls.each do |shortened_url| %>
  <tr>
    <td><%= link_to shortened_url.shortcode, "https://pof.pm/#{shortened_url.shortcode}"  %></td>
    <td><%= shortened_url.url.truncate(40) %></td>
    <td>
		<% if shortened_url.bitly_clicks.to_i > 0 %>
			<%= "#{shortened_url.bitly_clicks} + #{shortened_url.clicks.size} (#{shortened_url.bitly_clicks+shortened_url.clicks.size})" %>
		<% else %>
		 	<%= shortened_url.clicks.size %>
		<% end %>
	</td>
    <td><%= shortened_url.title.blank? ? raw("<i>None</i>") : shortened_url.title %></td>
    <td><%= shortened_url.description.blank? ? raw("<i>None</i>") : shortened_url.description %></td>
    <td><%= link_to 'Show', shortened_url %></td>
    <td><%= link_to 'Edit', edit_shortened_url_path(shortened_url) %></td>
    <td><%= link_to 'Destroy', shortened_url, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

